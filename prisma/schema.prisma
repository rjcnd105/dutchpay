// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["interactiveTransactions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Room {
  id                String          @id @unique @default(cuid())
  name              String          @db.VarChar(13) @default("정산")
  createdAt         DateTime        @default(now())
  expiryDate        DateTime        @default(now())
  payers            Payer[]
  payItems          PayItem[]
}

model Payer {
  id                Int             @id @default(autoincrement())
  name              String          @db.VarChar(6)
  room              Room            @relation(fields: [roomId], references: [id], onDelete: Cascade)
  roomId            String
  BankAccountNumber String          @default("")
  payItems          PayItem[]
  debtorForItems    DebtorForItem[]

  @@unique([roomId, name])
}

model PayItem {
  id                Int             @id @default(autoincrement())
  room              Room            @relation(fields: [roomId], references: [id], onDelete: Cascade)
  roomId            String
  name              String          @db.VarChar(8)
  amount            Int             @default(0)
  payer             Payer           @relation(fields: [payerId], references: [id])
  payerId           Int
  debtorForItems    DebtorForItem[]
}

model DebtorForItem {
  payItem           PayItem         @relation(fields: [payItemId], references: [id], onDelete: Cascade)
  payItemId         Int
  debtor            Payer           @relation(fields: [debtorId], references: [id], onDelete: Cascade)
  debtorId          Int
  debit             Boolean         @default(true)
  extraAmount       Int             @default(0)

  @@id([payItemId, debtorId])
}