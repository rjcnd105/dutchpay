{
  "name": "dutchpay",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "pnpm run generate:css",
    "build:prisma-gen": "prisma generate",
    "build:remix": "remix build",
    "dev": "PORT=3300 run-p dev:*",
    "dev:remix": "remix dev --debug",
    "dev:prisma-gen": "prisma generate --watch",
    "start": "remix-serve build",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "dbpush": "prisma db push",
    "dbpull": "prisma db pull --print",
    "dbstudio": "prisma studio",
    "gen-icons": "pnpx @svgr/cli --out-dir app/components/ui/icon --typescript -- public/icons && sudo chown \"$(whoami)\" app/components/ui/Icon",
    "tailwind-viewer": "pnpx tailwind-config-viewer -o",
    "migrate:deploy": "prisma migrate deploy"
  },
  "prisma": {
    "seed": "node --require esbuild-register prisma/seed.ts",
    "deleteEmptyPayItems": "node --require esbuild-register prisma/deleteEmptyPayItems.ts"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build",
    "/api"
  ],
  "dependencies": {
