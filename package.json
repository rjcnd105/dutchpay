{
  "name": "remix-template-vercel",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:*",
    "build:css": "pnpm run generate:css --env production",
    "build:prisma-gen": "prisma generate",
    "build:remix": "remix build",
    "dev": "run-p dev:*",
    "dev:css": "pnpm run generate:css -w",
    "dev:remix": "remix dev",
    "dev:prisma-gen": "prisma generate --watch",
    "generate:css": "postcss ./styles/**/*.css styles --dir ./app/styles",
    "start": "remix-serve build",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "cypress:open": "./node_modules/.bin/cypress open",
    "cypress:run:flow": "./node_modules/.bin/cypress run --spec cypress/integration/e2e/$FLOW/_index.spec.ts",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "dbpush": "prisma db push",
    "dbpull": "prisma db pull --print",
    "dbstudio": "prisma studio",
    "gen-icons": "pnpx @svgr/cli --out-dir app/components/ui/icon --typescript -- public/icons",
    "tailwind-viewer": "pnpx tailwind-config-viewer -o",
    "migrate:deploy": "prisma migrate deploy"
  },
  "prisma": {
    "seed": "node --require esbuild-register prisma/seed.ts"
  },
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build",
    "/api"
  ],
  "dependencies": {
    "@headlessui/react": "^1.6.4",
    "@prisma/client": "^3.15.1",
    "@remix-run/node": "^1.5.1",
    "@remix-run/react": "^1.5.1",
    "@remix-run/vercel": "^1.5.1",
    "@vercel/node": "^2.1.0",
    "clsx": "^1.1.1",
    "css-has-pseudo": "^3.0.4",
    "date-fns": "^2.28.0",
    "fp-ts": "^2.12.1",
    "rc-drawer": "^4.4.3",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-router": "^6.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-react": "^7.17.12",
    "@remix-run/dev": "^1.5.1",
    "@remix-run/eslint-config": "^1.5.1",
    "@remix-run/serve": "^1.5.1",
    "@testing-library/cypress": "^8.0.3",
    "@testing-library/dom": "^8.13.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "@vitejs/plugin-react": "^1.3.2",
    "c8": "^7.11.3",
    "cssnano": "^5.1.11",
    "cypress": "^10.0.3",
    "esbuild": "^0.14.43",
    "esbuild-register": "^3.3.3",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "happy-dom": "^5.2.0",
    "jest": "^28.1.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.1.0",
    "postcss-preset-env": "^7.7.1",
    "prettier": "^2.6.2",
    "prisma": "^3.15.1",
    "tailwindcss": "^3.1.1",
    "typescript": "^4.7.3",
    "vite": "^2.9.10",
    "vite-tsconfig-paths": "^3.5.0",
    "vitest": "^0.14.1"
  },
  "engines": {
    "node": ">=14"
  }
}
